{
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom"
    ],
    "jsx": "react-jsx",
    "types": [
      "react"
    ],
    "target": "esnext",
    "module": "commonjs",
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@screens/*": [
        "src/screens/*"
      ],
      "@api/*": [
        "src/api/*"
      ]
    }
  },
  "extends": "expo/tsconfig.base"
}
